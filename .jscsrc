{
  "preset": "google",
  "maximumLineLength": {
    "value": 240,
    "allowComments": true,
    "allowRegex": true
  },
  "requireCurlyBraces": [
    "else",
    "for",
    "while",
    "do",
    "try",
    "catch"
  ],
  "disallowSpacesInFunction": {
    "beforeOpeningRoundBrace": true
  },
  "disallowMultipleVarDecl": "exceptUndefined",
  "disallowSpacesInsideObjectBrackets": null,
  "disallowMultipleSpaces": true,
  "excludeFiles": [
    "bower_components/**",
    "node_modules/**",
    "coverage/**"
  ]
}

{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "types": ["node"],
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "preserveConstEnums": true
  },
  "exclude": [
    "node_modules/**",
    "**/*.d.ts"
  ],
  "include": [
    "*.ts"
  ]
}